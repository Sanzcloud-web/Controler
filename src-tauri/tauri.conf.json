{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Video Remote Controller",
  "version": "0.1.0",
  "identifier": "com.videoremote.controller",
  "build": {
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Video Remote Controller",
        "width": 320,
        "height": 180,
        "resizable": false,
        "decorations": false,
        "alwaysOnTop": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns"
    ]
  }
}
